<Joy@Joystick>:
    outer_size              : 1
    inner_size              : .25
    pad_size                : .5
    outer_background_color  : 0,1,1,.1
    inner_background_color  : 0,1,1,.05
    pad_background_color    : 0,1,1,.2
    outer_line_color        : 0,1,1,.2
    inner_line_color        : 0,0,0,0
    pad_line_color          : 0,1,1,.2
    outer_line_width        : 0.01
    inner_line_width        : 0.01
    pad_line_width          : 0.01
<BoxVer@BoxLayout>:
    orientation:"vertical"
<SolarTracker>:
    Lay3D:
        pos_hint:{"center_x":.5,"center_y":.7}
        post_processing: False
        Node
            post_processing: False
            translate: (0,0,0)
            scale:(.4,.81,.81)
            effect: False
            meshes: ("./data/obj3/OJB_Solid1_3.obj",)
            # yaw:root.pad_x
        
        Node
            post_processing: False
            translate: (0,0,0)
            scale:(.5,.81,.81)
            effect: False
            meshes: ("./data/obj3/OJB_Solid2_3.obj",)
            yaw:root.pad_x
        
        Node
            id:sol
            post_processing: False
            translate: (0,0,0)
            scale:(.81,.81,.81)
            effect: False
            meshes: ("./data/obj3/OJB_Solid3_3.obj",)
            yaw:root.pad_x
            rotate:(180+90,1,0,0)
            on_rotate:
                ylabel.text="{:.0f}".format(self.rotate[0]-180)
            on_yaw:
                xlabel.text="{:.0f}".format(self.yaw)

    BoxLayout
        Joy
            id:joy
            size_hint:None,None
            size:.5*min(root.size),.5*min(root.size)
            pos_hint:{"center_x":.5,"y":0.01}
        Joy
            id:joy1
            size_hint:None,None
            size:.5*min(root.size),.5*min(root.size)
            pos_hint:{"center_x":.5,"y":0.01}
    BoxLayout
        Label
            text:"0"
            id:xlabel
        Label
            id:ylabel
            text:"0"
            